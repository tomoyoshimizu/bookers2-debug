<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size: '100x100' %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= render 'favorite', book: @book%></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>コメント数：<%= @book.comments.count %></td>
        </tr>
      </table>
      <div>
        <% @book.comments.each do |comment| %>
          <div>
            <%= link_to(comment.user) do %>
              <%= image_tag comment.user.get_profile_image, size: '50x50' %>
              <%= comment.user.name %>
            <% end %>
            <% if comment.user == current_user %>
              <%= link_to 'Destroy', book_comment_path(comment.book, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </div>
          <p><%= comment.comment %></p>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@book, @new_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, cols: '40', rows: '5', placeholder: "コメントをここに" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信する" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>