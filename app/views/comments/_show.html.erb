  <div>
    <%= link_to(comment.user) do %>
      <%= image_tag comment.user.get_profile_image, size: '50x50' %>
      <%= comment.user.name %>
    <% end %>
    <% if comment.user == current_user %>
      <%= link_to 'Destroy', book_comment_path(comment.book, comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
    <% end %>
  </div>
  <p><%= comment.comment %></p>