<div class="container d-flex justify-content-center py-3">
  <div class="row w-100">
    <div class="col d-flex justify-content-center">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :search_word %>
        <%= f.select :search_model, options_for_select(["User", "Book"]) %>
        <%= f.select :search_type, options_for_select({"部分一致" => "partial", "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward"}) %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <div class="col d-flex justify-content-center">
      <%= form_with url: search_tag_path, method: :get, local: true do |f| %>
        <%= f.text_field :search_tag %>
        <%= f.submit "タグ検索" %>
      <% end %>
    </div>
  </div>
</div>

