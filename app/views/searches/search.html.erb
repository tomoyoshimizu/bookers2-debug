<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% if @search_word.present? %>
        <h2><%= @search_model %>s search for "<%= @search_word %>"</h2>
      <% end %>
      <% if @result.present? %>
        <% if @search_model == "User" %>
          <%= render 'users/index', users: @result%>
        <% elsif @search_model == "Book" %>
          <%= render 'books/index', books: @result%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>