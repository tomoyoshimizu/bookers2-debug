<%= form_with url: group_event_mails_path(group), method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control event_mail_title" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control event_mail_content" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send", class: "btn btn-success" %>
  </div>
<% end %>
